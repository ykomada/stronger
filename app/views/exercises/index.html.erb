<div class="container">
	<h1>My Exercises</h1>
</div>

<div class="container">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Primary Muscle Area</th>
				<th>Secondary Muscle Area</th>
				<th colspan="2"></th>
			</tr>
		</thead>
		<tbody>
			<% @exercises.each do |d|%>
			<tr>
				<td><%= d.name %></td>
				<td><%= d.primary_area %></td>
				<td><%= d.secondary_area %></td>
				<td><%= link_to 'Edit', edit_exercise_path(d) %></td>
				<td><%= link_to 'Destroy', exercise_path(d), method: :delete, data: {confirm: 'Are you sure?'} %></td>
			</tr>
		</tbody>
		<% end %>
	</table>
</div>

<div class="container">
	<a href=/exercises/new class="btn btn-primary" role="button">New Exercise</a>
</div>

